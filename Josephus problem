
#include <stdio.h>
int josephus(int n, int k) {
    if (n == 1)
        return 0;  
    return (josephus(n - 1, k) + k) % n;
}

int safePosition(int n, int k) {
    return josephus(n, k) + 1;
}
int main() {
    int n1 = 3, k1 = 2;
    printf("For n = %d, k = %d → Safe Position: %d\n", n1, k1, safePosition(n1, k1));

    int n2 = 5, k2 = 3;
    printf("For n = %d, k = %d → Safe Position: %d\n", n2, k2, safePosition(n2, k2));

    return 0;
}


#include <stdio.h>
#include <stdlib.h>
struct Node {
    int data;
    struct Node* next;
};
int isCircular(struct Node* head) {
    if (head == NULL)
        return 1; 

    struct Node* temp = head->next;
    while (temp != NULL && temp != head) {
        temp = temp->next;
    }

    return (temp == head);
}
struct Node* newNode(int data) {
    struct Node* node = (struct Node*)malloc(sizeof(struct Node));
    node->data = data;
    node->next = NULL;
    return node;
}

int main() {

    struct Node* head1 = newNode(2);
    head1->next = newNode(4);
    head1->next->next = newNode(6);
    head1->next->next->next = newNode(7);
    head1->next->next->next->next = newNode(5);

    if (isCircular(head1))
        printf("Linked List 1 is Circular\n");
    else
        printf("Linked List 1 is Not Circular\n");

    struct Node* head2 = newNode(1);
    head2->next = newNode(2);
    head2->next->next = newNode(3);
    head2->next->next->next = head2; 

    if (isCircular(head2))
        printf("Linked List 2 is Circular\n");
    else
        printf("Linked List 2 is Not Circular\n");

    return 0;
}
